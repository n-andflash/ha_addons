{
	"version": "0.4",
	"slug": "wallpad_dump",
	"name": "Wallpad RS485 Packet Dump",
	"description": "월패드 패킷 분석을 위한 애드온입니다.",
	"url": "https://github.com/n-andflash/ha_addons",
	"startup": "application",
	"boot": "auto",
	"arch": [ "armhf", "armv7", "aarch64", "amd64", "i386" ],
	"init": false,

	"uart": true,
	"map": [ "share:rw" ],

	"options": {
		"serial_mode": "serial",
		"serial": {
			"port":  "/dev/ttyUSB0",
			"baudrate": 9600,
			"bytesize": 8,
			"parity": "N",
			"stopbits": 1
		},
		"socket": {
			"address": "192.168.1.1",
			"port": 8899
		},
		"log": {
			"to_file": true,
			"filename": "/share/wallpad_dump.log"
		}
	},
	"schema": {
		"serial_mode": "list(serial|socket)",
		"serial": {
			"port":  "str",
			"baudrate": "int",
			"bytesize": "int(5,8)",
			"parity": "list(E|O|N|M|S)",
			"stopbits": "int(0,3)"
		},
		"socket": {
			"address": "str?",
			"port": "int?"
		},
		"log": {
			"to_file": "bool",
			"filename": "str"
		}
	}
}
